{
  "name": "cryptowars",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn run lint-staged && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint -- './src/*'",
    "lint-staged": "lint-staged",
    "testcov": "npm test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "public/**/*.js"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/tests/*.{js,jsx}",
      "!src/**/specs/**/*.{js,jsx}",
      "!src/**/*.e2e.{js,jsx}",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 98,
        "functions": 98,
        "lines": 98
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matdurand/cryptowars.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matdurand/cryptowars/issues"
  },
  "homepage": "https://github.com/matdurand/cryptowars#readme",
  "dependencies": {
    "@rematch/core": "1.0.6",
    "connected-react-router": "^6.3.1",
    "lodash": "^4.17.21",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-loading-overlay": "^1.0.1",
    "react-redux": "6.0.0",
    "react-router-dom": "4.3.1",
    "react-router-redux": "^4.0.8",
    "react-scripts": "2.1.3",
    "react-web3-provider": "^1.1.1",
    "styled-components": "4.1.3",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.2.0",
    "jest-dom": "3.0.0",
    "jest-junit": "5.2.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "react-testing-library": "5.3.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
